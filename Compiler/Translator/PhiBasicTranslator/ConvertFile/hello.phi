phi.Hello:OS16BIT
{
	str hello: 'Hello, World!\r\n';
    	str newline: '\r\n';
	str name:[40];
	
	log 'What is your name: ';
	ask name;
	log newline;
	log 'hello: ' name;
	log newline;
	log 'Press any key to continue...';
	
	call WaitForKeyPress;
	call EnableVideoMode;
}

asm.WaitForKeyPress
{
    	mov ah, 0x00
    	int 0x16
}

asm.EnableVideoMode
{
    	mov ax, 0x13
    	int 0x10
}